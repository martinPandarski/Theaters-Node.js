     <section class="details">
                    <h1>Theater title: {{play.title}}</h1>
                    <div>
                        <img src="{{play.imageUrl}}" />
                    </div>
                </section>

                <section class="details">
                    <h3>Theater Description</h3>
                    <p>{{play.description}}</p>
                    <div class="buttons">
                        <a class="btn delete" href="/delete-play/{{play._id}}">Delete</a>
                        <a class="btn edit" href="/edit/{{play._id}}">Edit</a>
                        <span class="liked">You have already liked this play!</span>
                        <a class="btn like" href="/like">Like</a>
                    </div>
                </section>
